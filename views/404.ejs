<html lang="en">
  <style>
    .btn {
      white-space: nowrap;
      text-align: center;
    }
  </style>
  <%- include('./partials/head.ejs') %>

  <body>
    <nav class="navbar bg-light">
      <div class="container-fluid d-flex justify-content-between">
        <a class="navbar-brand" style="font-size: 7vmin" href="/"
          >Time Tasks To Do</a
        >
        <form class="d-flex mx-5 w-25" role="login">
          <div class="row mx-1">
            <label for="Username" class="form-label" style="margin-left: 8px"
              >Username</label
            >
            <input
              class="form-control form-control-sm"
              placeholder="Username"
              aria-label="Username"
            />
          </div>
          <div class="row mx-1">
            <label for="Username" class="form-label" style="margin-left: 8px"
              >Password</label
            >
            <input
              class="form-control form-control-sm"
              placeholder="Password"
              aria-label="Password"
            />
          </div>
          <div style="position: relative">
            <button
              class="btn btn-sm btn-outline-success"
              type="submit"
              style="position: absolute; bottom: 0px"
            >
              Log In
            </button>
          </div>
        </form>
      </div>
    </nav>
    <div
      class="container d-flex align-items-center justify-content-center"
      style="height: 70vh"
    >
